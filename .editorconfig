root = true

[*.cs]
# Expression-bodied members
csharp_style_expression_bodied_methods = true:error
csharp_style_expression_bodied_properties = true:error

# Explicitly enforce PascalCase for public members (properties, methods, events, etc.)
dotnet_naming_rule.public_members_pascal_case.symbols   = public_members
dotnet_naming_rule.public_members_pascal_case.style     = pascal_case_style
dotnet_naming_rule.public_members_pascal_case.severity  = warning

dotnet_naming_symbols.public_members.applicable_kinds   = property, method, event, delegate
dotnet_naming_symbols.public_members.applicable_accessibilities = public, internal, protected, protected_internal

# Reuse your existing style
dotnet_naming_style.pascal_case_style.capitalization = pascal_case

# Optional: Also cover types (classes, etc.) if needed
dotnet_naming_rule.types_pascal_case.symbols   = types
dotnet_naming_rule.types_pascal_case.style     = pascal_case_style
dotnet_naming_rule.types_pascal_case.severity  = warning

dotnet_naming_symbols.types.applicable_kinds   = class, struct, interface, enum, delegate
dotnet_naming_symbols.types.applicable_accessibilities = *

# Optional: If you want to silence IDE1006 globally (not recommended, as it disables all naming checks)
# dotnet_diagnostic.IDE1006.severity = none



# -------------------------
# Naming rules for injected interface fields
# -------------------------
dotnet_naming_rule.injected_interfaces_should_start_with_underscore.severity = warning
dotnet_naming_rule.injected_interfaces_should_start_with_underscore.symbols = injected_interfaces
dotnet_naming_rule.injected_interfaces_should_start_with_underscore.style = underscore_camel_case

dotnet_naming_symbols.injected_interfaces.applicable_kinds = field
dotnet_naming_symbols.injected_interfaces.applicable_accessibilities = private
dotnet_naming_symbols.injected_interfaces.required_modifiers = readonly

dotnet_naming_style.underscore_camel_case.required_prefix = _
dotnet_naming_style.underscore_camel_case.capitalization = camel_case
